<script>
  // ---- 샘플 데이터 ----
  const ITEMS = [
    {id:1, title:"더미 더미 01", year:2024, type:"sculpture", material:"도자, 혼합재료", size:"120×80×60cm", cover:"https://picsum.photos/id/1011/800/600", desc:"구석으로 밀려난 감정의 덩어리를 형상화."},
    {id:2, title:"Mold Light A", year:2025, type:"lighting", material:"도자, G8 소켓, LED", size:"Ø18×H24cm", cover:"https://picsum.photos/id/1015/800/600", desc:"곰팡이의 포자처럼 번지는 빛."},
    {id:3, title:"Trace of Absence", year:2025, type:"furniture", material:"도자, 목재", size:"W90×D40×H45cm", cover:"https://picsum.photos/id/1025/800/600", desc:"부재가 남긴 흔적을 가구 스케일로 번역."},
    {id:4, title:"Spore Growth", year:2024, type:"sculpture", material:"도자, 스테인리스", size:"150×70×70cm", cover:"https://picsum.photos/id/1003/800/600", desc:"포자가 위로 자라나 공간을 점유하는 장면."},
    {id:5, title:"Soft Table (mold)", year:2023, type:"furniture", material:"도자, 강철", size:"W110×D60×H35cm", cover:"https://picsum.photos/id/1035/800/600", desc:"부드러운 달 조각 같은 곡률의 모듈."},
    {id:6, title:"Letters I Never Sent", year:2025, type:"sculpture", material:"도자, 종이, 혼합", size:"가변 설치", cover:"https://picsum.photos/id/1040/800/600", desc:"상자 속 잘린 편지—남겨진 감정의 잔재."},
    {id:7, title:"Mold Light B", year:2024, type:"lighting", material:"도자, G8 소켓, LED", size:"Ø16×H22cm", cover:"https://picsum.photos/id/1016/800/600", desc:"표면에 피어난 균사의 결을 빛으로."},
    {id:8, title:"Corner Growth", year:2025, type:"sculpture", material:"도자", size:"80×50×40cm", cover:"https://picsum.photos/id/1020/800/600", desc:"구석에서 은밀히 시작되는 생장."},
    {id:9, title:"Mold Stool Module", year:2025, type:"furniture", material:"도자", size:"W40×D32×H36cm", cover:"https://picsum.photos/id/1067/800/600", desc:"이음새 틈 없이 이어지는 모듈 스툴."},
    {id:10, title:"Early Mold Study", year:2022, type:"sculpture", material:"도자", size:"35×28×25cm", cover:"https://picsum.photos/id/1050/800/600", desc:"초기 균사 형태 연구."}
  ];

  const grid = document.getElementById('grid');
  const year = document.getElementById('year');
  year.textContent = new Date().getFullYear();

  function render(items){
    grid.innerHTML = '';
    const frag = document.createDocumentFragment();
    items.forEach(item=>{
      const li = document.createElement('article');
      li.className = 'item';
      li.setAttribute('role','listitem');
      li.dataset.type = item.type;
      li.dataset.year = item.year;
      const fig = document.createElement('figure');
      const ph = document.createElement('div');
      ph.className = 'thumb';
      ph.textContent = '이미지 로딩 중...';
      const img = document.createElement('img');
      img.loading = 'lazy';
      img.alt = `${item.title} 표지 이미지`;
      img.src = item.cover;
      img.onerror = ()=>{ ph.style.display='grid'; img.style.display='none'; };
      fig.appendChild(ph);
      fig.appendChild(img);

      const badge = document.createElement('span');
      badge.className='badge';
      badge.textContent = `${item.year} · ${label(item.type)}`;
      fig.appendChild(badge);

      const fav = document.createElement('button');
      fav.className='fav';
      fav.setAttribute('aria-label','좋아요');
      fav.title='좋아요';
      fav.textContent='❤';
      fig.appendChild(fav);

      li.appendChild(fig);

      const meta = document.createElement('div');
      meta.className='meta';
      meta.innerHTML = `<div class="title">${item.title}</div><div class="desc">${item.material} · ${item.size}</div>`;
      li.appendChild(meta);

      li.addEventListener('click', (e)=>{
        if(e.target.closest('.fav')){ e.stopPropagation(); e.preventDefault(); e.target.classList.toggle('on'); return; }
        openLightbox(item);
      });

      frag.appendChild(li);
    });
    grid.appendChild(frag);
  }

  function label(type){
    return ({furniture:'가구', lighting:'조명', sculpture:'조형'}[type]||type)
  }

  function filterBy(key){
    if(key==='all') return render(ITEMS);
    const out = ITEMS.filter(it=> String(it.year)===key || it.type===key);
    render(out);
  }

  render(ITEMS);

  document.querySelectorAll('.chip').forEach(ch=>{
    ch.addEventListener('click',()=>{
      document.querySelectorAll('.chip').forEach(c=>c.setAttribute('aria-pressed','false'));
      ch.setAttribute('aria-pressed','true');
      filterBy(ch.dataset.filter);
    });
  });

  const q = document.getElementById('q');
  q.addEventListener('input',()=>{
    const s = q.value.trim().toLowerCase();
    const out = ITEMS.filter(it=>
      it.title.toLowerCase().includes(s) ||
      it.material.toLowerCase().includes(s) ||
      (it.desc||'').toLowerCase().includes(s)
    );
    render(out);
  });

  const lb = document.getElementById('lightbox');
  const lbImg = document.getElementById('lbImg');
  const lbTitle = document.getElementById('lbTitle');
  const lbMeta = document.getElementById('lbMeta');
  const lbDesc = document.getElementById('lbDesc');
  const closeLb = document.getElementById('closeLb');

  function openLightbox(item){
    lbImg.src = item.cover;
    lbTitle.textContent = item.title;
    lbMeta.textContent = `${item.year} · ${label(item.type)} · ${item.material} · ${item.size}`;
    lbDesc.textContent = item.desc || '';
    lb.classList.add('open');
    lb.setAttribute('aria-hidden','false');
    document.body.style.overflow='hidden';
  }
  function closeLightbox(){
    lb.classList.remove('open');
    lb.setAttribute('aria-hidden','true');
    document.body.style.overflow='';
  }
  closeLb.addEventListener('click', closeLightbox);
  lb.addEventListener('click', (e)=>{ if(e.target===lb) closeLightbox(); });
  window.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeLightbox(); });

  const about = document.getElementById('about');
  const aboutBtn = document.getElementById('aboutBtn');
  const closeAbout = document.getElementById('closeAbout');
  aboutBtn.addEventListener('click',()=>{
    aboutBtn.setAttribute('aria-expanded','true');
    about.classList.add('open'); about.setAttribute('aria-hidden','false');
    document.body.style.overflow='hidden';
  });
  closeAbout.addEventListener('click',()=>{ about.classList.remove('open'); about.setAttribute('aria-hidden','true'); document.body.style.overflow=''; aboutBtn.setAttribute('aria-expanded','false'); });
</script>
</body>
</html>
